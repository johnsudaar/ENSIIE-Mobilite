<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ensiie.tp4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Material.Light.DarkActionBar">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeActivity" />
        <activity android:name=".NewUserActivity" />
        <activity android:name=".NewUserConfirmActivity" />
        <activity android:name=".AddTodoActivity" />
        <activity android:name=".EditTodoActivity" />
        <activity android:name=".TodoListActivity" />
    </application>

</manifest>