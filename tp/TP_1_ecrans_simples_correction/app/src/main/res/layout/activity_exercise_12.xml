<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_blue"
        android:layout_width="@dimen/view_size"
        android:layout_height="@dimen/view_size"
        android:background="@color/blue" />


    <View
        android:id="@+id/view_black"
        android:layout_width="@dimen/view_size"
        android:layout_height="@dimen/view_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/black" />

    <View
        android:id="@+id/view_red"
        android:layout_width="@dimen/view_size"
        android:layout_height="@dimen/view_size"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view_blue"
        android:background="@color/red" />

    <View
        android:id="@+id/view_grey"
        android:layout_width="@dimen/view_size"
        android:layout_height="@dimen/view_size"
        android:layout_above="@id/view_black"
        android:layout_alignTop="@id/view_red"
        android:layout_toRightOf="@id/view_red"
        android:background="@color/grey" />
</RelativeLayout>