<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.johnsudaar.moviie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MoviieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- <activity android:name=".MainActivity"></activity> -->
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.Login">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MyMovies"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Movies"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MovieDetailActivity"
            android:theme="@style/AppTheme.NoActionBarTranslucent" />
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/AppTheme.Login" />
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.FriendsActivity" />
        <activity android:name=".activities.FriendSearchActivity"></activity>
    </application>

</manifest>